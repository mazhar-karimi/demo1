@{
    ViewBag.Title = "Create";
    var locations = ViewBag.Locations as List<EasyAdminMVC.Location>;
}

<h3 class="blank1">New Complain</h3>
<div class="tab-content">
    <div class="tab-pane active" id="horizontal-form">
        @using (Html.BeginForm("Create", "Complain", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
          

            <div class="form-group">
                <label for="focusedinput" class="col-sm-2 control-label">Title</label>
                <div class="col-sm-8">
                    <input required type="text" name="title" class="form-control1" id="focusedinput" placeholder="Default Input">
                </div>
                <div class="col-sm-2 jlkdfj1">
                    <p class="help-block">example: "Visual Studio is not istalled."</p>
                </div>
            </div>
            <div class="form-group">
                <label for="selector1" class="col-sm-2 control-label">Location</label>
                <div class="col-sm-8">
                    <select required name="location_id" id="selector1" class="form-control1">
                        @foreach (var item in locations)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="selector1" class="col-sm-2 control-label">PC</label>
                <div class="col-sm-8">
                    <select name="selector1" id="selector1" class="form-control1">
                        <option>PC 1</option>
                        <option>PC 2</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="txtarea1" class="col-sm-2 control-label">Detail</label>
                <div class="col-sm-8">
                    <textarea required name="detail" id="txtarea1" cols="50" rows="4" class="form-control1"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="file1" class="col-sm-2 control-label">Evidence File</label>
                <div class="col-sm-8">
                    <input type="file" name="evidence" class="form-control1" value=" " />
                </div>
            </div>

            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <button class="btn-success btn">Submit</button>
                        <button class="btn-default btn">Cancel</button>
                        <button class="btn-inverse btn">Reset</button>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
